terraform {
  required_version = ">= 1.0"
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "~> 3.0"
    }
  }

  backend "azurerm" {
    resource_group_name  = "rg-terraform-state"           # Terraform State 管理用のリソースグループ名
    storage_account_name = "sttfstateslackbot"            # Terraform State 管理用のストレージアカウント名（グローバルで一意）
    container_name       = "tfstate"                      # Terraform State 保存用のコンテナ名
    key                  = "production.terraform.tfstate" # State ファイル名
  }
}

provider "azurerm" {
  features {
    key_vault {
      purge_soft_delete_on_destroy = false
    }
    resource_group {
      prevent_deletion_if_contains_resources = false
    }
  }
}
